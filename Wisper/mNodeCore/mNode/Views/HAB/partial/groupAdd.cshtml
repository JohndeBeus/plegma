@{
    Layout = ViewBag.IsPjax ? null : "/Layout.cshtml";
}

<div class="box">
    <div class="box-header ">
        <h3 class="box-title"> <b>Add New Group</b></h3>
     </div><!-- /.box-header -->
    <!-- form start -->
    <form action="/hab/groups/add" method="post">
        <div class="box-body" style="display: block;">
            <div class="row">
                <div class="col-md-1">
                </div>
                <div class="col-md-6">
                    <div class=" form-group">
                        <label for="id">Name</label>
                        <p>Define a name for the Group</p>
                        <input type="text" class="form-control" name="name" id="name" placeholder="group name">
                    </div>
                </div>
            </div>
        </div><!-- /.box-body -->
        <div class="box-footer">
            <div class="row">
                <div class="col-md-1">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-default btn-flat">Add<i class="fa fa-fw fa-plus"></i></button>
                </div>
            </div>
        </div>
    </form>
    </div><!-- /.box -->
